{
  "private": true,
  "scripts": {
    "lint":
      "tslint -c tslint.json `find . -type f -name \"*.ts\" -and -not -name \"*.scss.d.ts\" -or -name \"*.tsx\" | grep -v \"node_modules\"`",
    "pretest": "yarn run lint",
    "test": "jest",
    "lerna": "lerna",
    "lerna-clean": "lerna clean --yes",
    "lerna-publish": "lerna publish --skip-npm",
    "generate-typings": "node ./generateTypingsForScss.js",
    "prepare": "yarn generate-typings"
  },
  "devDependencies": {
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "1.1.1",
    "glob": "^7.1.2",
    "jest": "^21.2.1",
    "lerna": "^2.8.0",
    "nock": "^9.1.0",
    "node-fetch": "^1.7.3",
    "react-test-renderer": "16.2.0",
    "redux-mock-store": "^1.3.0",
    "ts-jest": "^21.2.3",
    "tslint": "^5.9.1",
    "tslint-react": "^3.4.0",
    "typed-css-modules": "^0.3.1",
    "typescript-react-intl": "^0.2.1"
  },
  "workspaces": ["packages/*", "apps/*", "widgets/*"],
  "jest": {
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    },
    "setupTestFrameworkScriptFile": "./setupTests.ts",
    "testRegex": "(.*\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transformIgnorePatterns": ["/node_modules/(?!@userfeeds|@linkexchange).*"],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      }
    }
  }
}
